{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/./master/nextflow_schema.json",
    "title": ". pipeline parameters",
    "description": "",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "properties": {
                "SAMPLEFILE": {
                    "type": "string"
                },
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "fa_icon": "fas fa-folder-open",
                    "default": "./results"
                },
                "reportdir": {
                    "type": "string",
                    "default": "./reports"
                },
                "barcode_path": {
                    "type": "string",
                    "default": "filtered_feature_bc_matrix/barcodes.tsv.gz"
                },
                "bam_file": {
                    "type": "string",
                    "default": "possorted_genome_bam.bam"
                },
                "index_file": {
                    "type": "string",
                    "default": "possorted_genome_bam.bam.bai"
                },
                "GTF": {
                    "type": "string",
                    "default": "/nfs/cellgeni/STAR/human/2020A/GRCh38_v32_filtered.gtf"
                },
                "RMSK": {
                    "type": "string",
                    "default": "/nfs/cellgeni/velocyto/GRCh38_rmsk.gtf"
                },
                "MEM": {
                    "type": "integer",
                    "default": 7000
                },
                "THREADS": {
                    "type": "integer",
                    "default": 16
                },
                "HELP": {
                    "type": "string",
                    "default": "false"
                }
            },
            "required": [
                "SAMPLEFILE"
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        }
    ]
}